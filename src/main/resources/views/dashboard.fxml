<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controllers.DashboardController">
    <top>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <!-- Nested image tag for proper resource loading -->
            <ImageView fx:id="dashboardLogo" fitWidth="100" fitHeight="100" preserveRatio="true">
                <image>
                    <Image url="@/images/hero.png" />
                </image>
            </ImageView>
            <Label text="User Dashboard" styleClass="dashboard-title"/>
        </HBox>
    </top>
    <center>
        <Label text="This area can display your health records, medication schedules, and more."
               styleClass="dashboard-text" wrapText="true" style="-fx-padding: 30;"/>
    </center>
</BorderPane>
